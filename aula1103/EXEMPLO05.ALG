Algoritmo "Exemplo05"

Var
   numero: inteiro

Inicio
   escreval("Digite um número inteiro:")
   leia(numero)
   se (numero <> 0) entao
      se (numero > 0) entao
         escreval ("O número é maior que zero")
      senao
         escreval("O número é menor que zero")
      fimse
   senao
        escreval("O número é igual a zero")
   fimse

Fimalgoritmo